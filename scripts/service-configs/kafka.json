{
  "service": {
    "name": "kafka",
    "user": "root",
    "principal": "kafka-principal",
    "placement_strategy": "NODE",
    "phase_strategy": "INSTALL",
    "enable_replacement": false,
    "recover_in_place_grace_period_secs": 1200,
    "min_delay_between_recovers_secs": 600,
    "enable_health_check": false,
    "health_check_delay_sec": 15,
    "health_check_interval_sec": 10,
    "health_check_timeout_sec": 20,
    "health_check_grace_period_sec": 10,
    "health_check_max_consecutive_failures": 3
  },
  "brokers": {
    "cpus": 1,
    "mem": 2304,
    "disk": 5000,
    "disk_type": "ROOT",
    "count": 3,
    "port": 0,
    "heap": {
      "size": 2048
    },
    "jmx": {
      "enable": true,
      "remote": true,
      "remote_port": 9999,
      "remote_registry_ssl": false,
      "remote_ssl": false,
      "remote_authenticate": false,
      "remote_ssl_need_client_auth": false
    },
    "statsd": {
      "port": 0
    }
  },
  "executor": {
    "cpus": 0.5,
    "mem": 256,
    "disk": 0
  },
  "kafka": {
    "kafka_zookeeper_uri": "master.mesos:2181",
